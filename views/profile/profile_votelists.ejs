<!doctype html>
<html lang="en">
<%- include('../partials/head', {title: "/u/" + profile_user + " - votelists" }) %>

<body>
    <%- include('../partials/nav', {user: locals.user}) %>

    <span id="auth"><%= isAuth %></span>

    <div class="container" style="padding-top: 60px; max-width: 850px;">

        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link active" href="/u/<%= profile_user %>/votelists">Votelists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/u/<%= profile_user %>/posts">Vote elements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/u/<%= profile_user %>/saved/posts">Saved vote elements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/settings">Settings</a>
            </li>

        </ul>
        <br>

        <div class="main">
            <%- include('../partials/sort') %>

            <% if (posts != undefined) { %>
            <article class="post" data-ref="<%= posts[0].subreddit %>">
                

                <div class="info">
                    <header>
                        <a><%= posts[0].subreddit %></a>
                        <small><span class="post-user"><a>by <%= posts[0].username %></a></span></small>
                    </header>
                </div>
            </article>

            
            <% if(posts.length == 0) { %>
            There are no posts.
            <% } %>

            <% } else { %>
            There are no posts.
            <% } %>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/autosize@4.0.2/dist/autosize.min.js"></script>
    <script src="/js/load.js"></script>

    <script src="/js/index.js"></script>
    <script src="/js/post.js"></script>
    <script src="/js/sort.js"></script>
    <script src="/js/subreddit.js"></script>
</body>

</html>