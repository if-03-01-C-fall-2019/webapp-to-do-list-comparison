<!doctype html>
<html lang="en">

<head>
    <title>Settings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">

</head>

<%- include('partials/nav', {user: locals.user, karma}) %>

<body>
    <div class="container" style="padding-top: 60px; max-width: 850px;">

        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/u/<%=user%>/votelists">Votelists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/u/<%=user%>/posts">Vote elements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/u/<%=user%>/saved/posts">Saved vote elements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/settings">Settings</a>
            </li>

        </ul>
        <br>
        <div class="row">
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Change password</h5>
                  <p class="card-text">Change your password</p>
                  <button class="btn btn-success " id="change-password" type="submit">Change password</button><br>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Delete account</h5>
                  <p class="card-text">Delete your account forever, yes really forever!</p>
                  <button class="btn btn-danger " id="delete-account" type="submit">Delete account</button>
                </div>
              </div>
            </div>
          </div>
        
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="/js/settings.js"></script>
</body>



</html>