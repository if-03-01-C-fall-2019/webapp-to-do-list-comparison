<!doctype html>
<html lang="en">
<%- include('../partials/head', {title: "Create a Votelist"}) %>

<body>

    <span id="auth"><%= isAuth %></span>

    <%- include('../partials/nav', {user: locals.user}) %>
    <div class="container" style="padding-top: 60px; max-width: 575.98px;">
        <h1 class="mb-4">Create a new Votelist</h1>



        <div class="main">

            <div>
                <% if(!locals.user) { %>
                You must be logged in to create a Votelist.
                <% } else { %>
                <form id="form-subreddit" action="/submit/subreddit" method="post">
                    <input type="text" class="form-control" name="subreddit" id="subreddit_form"
                        placeholder="Enter Votelist name" required>
                    <div class="invalid-feedback">That Votelist already exists!</div><br>
                    <textarea class="form-control" rows="5" name="description" placeholder="Enter description"
                        required></textarea><br>
                    <button type="submit" class="btn btn-primary auth-req">Create</button>
                </form>
                <% } %>
            </div>
        </div>
    </div>
    </div>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/10.7.1/validator.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/autosize@4.0.2/dist/autosize.min.js"></script>

    <script src="/js/index.js"></script>
    <script src="/js/submit.js"></script>

</body>

</html>